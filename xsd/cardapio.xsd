<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        xmlns:p="http://prato.org"
        targetNamespace="http://prato.org"
        elementFormDefault="qualified">

        <element name="cardapio">
                <complexType>
                        <sequence>
                                
                                <element name="prato">
                                        <complexType>
                                                <sequence>

                                                   <element name="nome" type="string"/>
                                                   <element name="descricao" type="string"/>     
                                                   <element name="ingredientes">
                                                        <complexType>
                                                                <sequence>
                                                                        <element name="ingrediente" type="string" minOccurs="1" maxOccurs="unbounded"/>
                                                                </sequence>
                                                        </complexType>
                                                   </element>
                                                   <element name="preco">
                                                        <simpleType>
                                                                <restriction base="decimal">
                                                                        <fractionDigits value="2"/>
                                                                </restriction>
                                                        </simpleType>
                                                   </element>
                                                   <element name="calorias">
                                                        <simpleType>
                                                                <restriction base="integer"/>
                                                        </simpleType>
                                                   </element>
                                                   <element name="tempoPreparo" type="string"/>
                                                </sequence>
                                                <attribute name="prato" type="integer" use="required"/>
                                        </complexType>
                                </element>

                        </sequence>
                </complexType>
        </element>
</schema>